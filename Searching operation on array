void main()
{ int a[30],i,pos,no,size;
  clrscr();
  printf("enter the size of aaray:");
  scanf("%d",&size);
  printf("enter the aaray elements:");
  for(i=0;i<size;i++)
  { scanf("%d",&a[i]);
  }
  printf("enter the no:");
  scanf("%d",&no);
  printf("enter the position:");
  scanf("%d",&pos);
  for(i=pos-1;i<=size-1;i++)
  { a[i]=a[i+1];
  }
  a[pos-1]=no;
  size++;
  printf( "aaray:");
  for(i=0;i<size;i++)
  { printf("%d",a[i]);
  }
  getch();
  }



